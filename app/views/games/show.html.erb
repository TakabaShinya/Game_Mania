<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <%= render "users/user_info", user: @user, game: @game_new %>
      <div class='col-md-8 offset-md-1'>
        <h2>投稿詳細及びコメント</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>ゲーム名</th>
              <th>ゲーム機種</th>
              <th>ゲーム画像</th>
              <th>ゲーム内容</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@game.user.id) do %>
                  <%= attachment_image_tag @game.user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %><br>
                  <%= @game.user.name %>
                <% end %>
              </td>
              <td><%= @game.title %></td>
              <td><%= @game.hard %></td>
              <td>
                <%= link_to game_path(@game.id) do %>
                  <%= attachment_image_tag @game, :game_image, :fill, 100, 100, format: "jpeg", fallback: "default-image.jpg" %>
                <% end %>
              </td>
              <td><%= @game.body %></td>
              <% if @game.user.id == current_user.id %>
                <td><%= link_to "削除", game_path(@game.id), method: :delete, class:"btn btn-sm btn-danger destroy", "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <div>
          <p>【コメント件数：<%= @game.game_comments.count %>】</p>
          <% @game.game_comments.each do |game_comment| %>
            <%= attachment_image_tag game_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
            <%= game_comment.user.name %>
            <%= game_comment.comment %>
            <% if game_comment.user == current_user %>
              <div>
                <%= link_to "削除", game_game_comment_path(game_comment.game, game_comment), method: :delete, class:"btn btn-sm btn-danger destroy", "data-confirm" => "本当に消しますか？"  %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= form_with(model:[@game, @game_comment], local: true) do |f| %>
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
