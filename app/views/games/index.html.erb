<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <% if @game.errors.any? %>
      <%= @game.errors.count %>error prohibited this obj from being saved:
      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
    <div class='row'>
      <%= render "users/user_info", user: @user, game: @game %>
      <div class='col-md-8 offset-md-1'>
        <h2>投稿一覧</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>ゲーム名</th>
              <th>ゲーム内容</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @games.each do |game| %>
              <tr>
                <td>
                  <%= link_to user_path(game.user.id) do %>
                    <%= attachment_image_tag game.user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "#{game.title}", game_path(game.id) %>
                </td>
                <td><%= game.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
