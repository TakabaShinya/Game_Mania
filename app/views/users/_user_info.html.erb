     <div class='col-md-3'>
        <h2>ユーザー情報</h2>
        <table class='table'>
          <tr>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
          </tr>
          <tr>
            <th>名前</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= user.introduction %></th>
          </tr>
        </table>　 
        <div class='row'>
          <a class="btn btn-outline-secondary btn-block" href="/users/<%= user.id %>/edit">
            <i class="fas fa-user-cog"></i>
          </a>
        </div>
        <h2 class="mt-3">新規投稿フォーム</h2>
        <%= form_with model:game, local:true do |f| %>
          <div class="form-group">
            <label for="game_title">ゲーム名</label>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="game_body">ゲーム説明</label>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit "新規投稿", class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
      